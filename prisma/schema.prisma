generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  priority    String?
  dueDate     DateTime?
  completed   Boolean
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
